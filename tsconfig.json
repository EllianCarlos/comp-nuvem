{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noLib": false,
    "rootDir": "./src",
    "moduleResolution": "node16",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "ES2017",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowUnusedLabels": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
